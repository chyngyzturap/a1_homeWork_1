<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.A1_homeWork_1" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkRed</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    
    <style name="ViewStyle" parent="TextAppearance.AppCompat.Title">
<item name="android:textColor">@color/darkRed</item>
<item name="fontFamily">sans-serif-black</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="layout_constraintTop_toBottomOf">@id/icon</item>
        <item name="android:textSize">25sp</item>
        <item name="android:text">@string/welcome_txt</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LoginViewStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/darkRed</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="layout_constraintTop_toBottomOf">@id/Login</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/user_txt</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="EditUserStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/yellow</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="layout_constraintTop_toBottomOf">@id/user_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/editName_txt</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PasswordViewStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/darkRed</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="layout_constraintTop_toBottomOf">@id/Login</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/password_txt</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="EditPasswordStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/yellow</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="layout_constraintTop_toBottomOf">@id/user_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/editPassword_txt</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ButtonViewStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/darkRed</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="layout_constraintTop_toBottomOf">@id/edit_password</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">Войти</item>
        <item name="android:textAlignment">center</item>
    </style>



</resources>